<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/toolbar"
    android:id="@+id/linearLayout"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardElevation="4dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:selectableItemBackground">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp"
            android:id="@+id/rl"
            android:background="#FFFFFF">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFilmName"
                android:textColor="@color/colorPrimaryText"
                android:textSize="15sp"    android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_alignTop="@+id/iv"
                android:layout_toRightOf="@+id/iv"
                android:layout_toEndOf="@+id/iv"/>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFilmYear"
                android:textSize="13sp"
                android:textColor="@color/colorPrimaryText"
                android:layout_below="@+id/tvFilmName"
                android:layout_alignLeft="@+id/tvFilmName"
                android:layout_alignStart="@+id/tvFilmName"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFilmID"
                android:textSize="13sp"
                android:textColor="@color/abc_primary_text_material_dark"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/iv"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvFilmDescription"
                android:layout_below="@+id/tvFilmYear"
                android:layout_alignLeft="@+id/tvFilmYear"
                android:layout_alignStart="@+id/tvFilmYear"
                android:layout_marginTop="8dp"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvRate"
                android:layout_below="@+id/tvFilmYear"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:textColor="@color/colorPrimaryText"
                android:textSize="13sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>