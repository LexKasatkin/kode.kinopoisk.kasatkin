<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_below="@+id/toolbar"
    android:id="@+id/linearLayout"
    android:layout_alignParentBottom="true"
    android:background="#FFFFFF"
    android:orientation="vertical">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardElevation="4dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:selectableItemBackground">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:id="@+id/ivBigPoster"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvName"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/ivBigPoster"
        android:layout_toEndOf="@+id/ivBigPoster"
        android:textColor="@color/colorPrimaryText"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvEnName"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/ivBigPoster"
        android:layout_toEndOf="@+id/ivBigPoster"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:id="@+id/tvGenre"
        android:layout_below="@+id/tvEnName"
        android:layout_toRightOf="@+id/ivBigPoster"
        android:layout_toEndOf="@+id/ivBigPoster"
        android:layout_marginTop="8dp"
        android:textColor="@color/colorPrimaryText"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvCountryYear"
        android:textColor="@color/colorPrimaryText"
        android:textSize="13sp"
        android:layout_below="@+id/tvGenre"
        android:layout_alignLeft="@+id/tvGenre"
        android:layout_alignStart="@+id/tvGenre"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fgfg"
        android:id="@+id/tvSlogan"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        android:layout_below="@+id/tvCountryYear"
        android:layout_alignLeft="@+id/tvCountryYear"
        android:layout_alignStart="@+id/tvCountryYear"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v"
        android:id="@+id/tvRatingAgeLimits"
        android:textColor="@color/colorPrimary"
        android:textSize="11sp"
        android:layout_below="@+id/ivBigPoster"
        android:layout_alignLeft="@+id/ivBigPoster"
        android:layout_alignStart="@+id/ivBigPoster" />
</RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv2"
        app:cardElevation="4dp"
        android:elevation="4dp"
        android:layout_margin="4dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="?android:selectableItemBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="tvDescription"
            android:id="@+id/tvDescription"
            android:textColor="@color/colorPrimaryText" />
    </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
